@model Dominio.FichaCuidados

@{
    ViewData["Title"] = "Ficha de cuidados";
}
<h1>Ficha de cuidados</h1>

@if (Model == null)
{
    @ViewBag.Mensaje
    <div>
        <a asp-action="ListarPlanta"> Volver a la lista de plantas </a>
    </div>
}
else
{
    <div>
        <h4>Planta</h4>
        <hr />
        <dl class="row">


            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FrecuenciaRiego)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FrecuenciaRiego)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Illuminacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Illuminacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Temperatura)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Temperatura)
            </dd>

        </dl>
    </div>
    <div>
        <a asp-action="ListarPlanta">Volver</a>
    </div>

}